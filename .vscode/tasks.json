{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  ///< win下编译
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "type": "shell",
      "command": "g++",
      "args": [
        "-g",
        // "${workspaceFolder}\*.cpp",
        "-o",
        "${workspaceFolder}\toy_compiler",
        "-fPIC",
        "-O0",
        "-w",
        "-fpermissive"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "silent"
      },
      "problemMatcher": "$gcc"
    }
  ]
}